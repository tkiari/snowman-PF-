          <table class="table table-hover table-inverse">
          <tbody>
           <% posts.each do |post| %>
            <tr>
              <td>
              <%= link_to public_user_path(post.user_id) do%>
                <%= image_tag post.get_post_image(100,100) %>
              <% end %>
              </td>
              <td><%= link_to post.title, public_post_path(post.id) %></td>
              <td><%= post.opinion %></td>
              <td id="favorite_buttons_<%= post.id %>">
                <%= render "public/favorites/favorite", post: post %>
              </td>
            </tr>
           <% end %>
          </tbody>
        </table>