
      <table class="table">
        <tbody>
        <% @users.each do |user| %>
         <tr>
          <td>
           <%= image_tag user.get_profile_image(100,100) %>
           </td>
          <td><%= user.name %></td>

          <td>
          <% unless user.id == current_user.id %>
          <div class="follow_list_<%= user.id %>">
            <%= render partial: "public/relationships/follow", locals: {user: user} %>
          </div>
          <% end %>
          </td>

          <td><%= link_to "このユーザーを見る", public_user_path(user.id) %></td>

          <td>
          <% unless user.id == current_user.id %>
          <%= link_to public_user_chat_path(current_user.id, user.id) do %>
          <button type="button" class="btn btn-secondary">chat</button>
          <% end %>
          <% end %>
          </td>

         </tr>
         <% end %>
        </tbody>
      </table>